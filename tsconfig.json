{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@nuxt/types",
      "src/types"
    ],
    "lib": [
      "dom",
      "esnext",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules",
    "stories"
  ]
}
